<odoo>
    <record id="action_report_hoja_taller" model="ir.actions.report">
        <field name="name">Hoja de Taller(Sin precios)</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">taller.report_hoja_taller</field>
        <field name="report_file">taller.report_hoja_taller</field>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_hoja_taller">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="text-center" style="margin-bottom: 30px;">
                            <h2>Orden de Preparación</h2>
                            <h1><t t-esc="doc.name"/></h1>
                        </div>

                        <div class="row mb-4">
                            <div class="col-6">
                                <strong>Cliente:</strong> <t t-esc="doc.partner_id.name"/>
                            </div>
                            <div class="col-6 text-right">
                                <strong>Fecha:</strong> <t t-esc="doc.date_order" t-options='{"widget": "date"}'/>
                            </div>
                        </div>

                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th class="text-center" style="width: 10%;">Check</th>
                                    <th>Producto</th>
                                    <th class="text-right" style="width: 20%;">Cantidad</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="doc.order_line" t-as="line">
                                    <td class="text-center">
                                        <div style="border: 1px solid black; width: 20px; height: 20px; margin: auto;"></div>
                                    </td>
                                    <td>
                                        <strong t-esc="line.product_id.name"/><br/>
                                        <span class="text-muted" style="font-size: 0.8em;" t-esc="line.name"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="line.product_uom_qty"/> <span t-field="line.product_uom"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <div class="mt-5 pt-5 text-center">
                            <span>Firma del Operario: ___________________________</span>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

<template id="report_saleorder_horario" inherit_id="sale.report_saleorder_document">
        <xpath expr="//div[@name='so_total_summary']" position="after">
            <div class="mt-5 text-center" style="border-top: 1px solid black; padding-top: 10px; font-size: 10px; color: #666;">
                <strong>Aviso Importante:</strong>
                <span>El horario de recepción de mercancía y atención telefónica es de Lunes a Viernes de 08:00 a 16:00.</span>
            </div>
        </xpath>
    </template>
</odoo>



